@model TinyMaster.Models.Entities.RezervationModel
@{
    ViewData["Title"] = "Reservation";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ürün Ayırma Sayfası</title>
</head>
<body>
    <h2>Ürün Ayırma Sayfası</h2>
    <form id="reservationForm">
        <div>
            <label for="reservationDate">Tarih:</label>
            <input type="date" id="reservationDate" name="reservationDate" required>
        </div>
        <div>
            <label for="reservationTime">Saat:</label>
            <input type="time" id="reservationTime" name="reservationTime" required>
        </div>
        <div>
            <label for="numberOfPeople">Kişi Sayısı:</label>
            <input type="number" id="numberOfPeople" name="numberOfPeople" min="1" required>
        </div>
        <div>
            <label for="branch">Şube:</label>
            <select id="branch" name="branch" required>
                <option value="">Şube Seçin</option>
                <option value="branch1">Şube 1</option>
                <option value="branch2">Şube 2</option>
                <option value="branch3">Şube 3</option>
                <!-- Diğer şube seçeneklerini ekleyebilirsiniz -->
            </select>
        </div>
        <div>
            <button type="submit">Ürün Ayır</button>
        </div>
    </form>

    <div id="reservationResult" style="display: none;"></div>

    <script>
        document.getElementById("reservationForm").addEventListener("submit", function(event) {
            event.preventDefault(); // Sayfanın yenilenmesini engelle

            // Formdaki verileri al
            var formData = new FormData(this);

            // Form verilerini JSON formatına çevir
            var jsonData = {};
            formData.forEach(function(value, key){
                jsonData[key] = value;
            });

            // Form verilerini gönder
            fetch("/reservation", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json"
                },
                body: JSON.stringify(jsonData)
            })
            .then(response => response.json())
            .then(data => {
                // Server tarafından dönen yanıtı işle
                var reservationResult = document.getElementById("reservationResult");
                reservationResult.style.display = "block";
                reservationResult.textContent = data.message;
            })
            .catch(error => console.error("Error:", error));
        });
    </script>
</body>
</html>
