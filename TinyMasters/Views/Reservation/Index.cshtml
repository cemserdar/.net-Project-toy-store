@model TinyMasters.ViewModel.ReservationViewModel
@{
    ViewBag.Title = "Reservation";
}

<h1>Ürün Ayırma</h1>


<form method="post">
    <div class="form-group">
        <label asp-for="Date" class="control-label">Tarih</label>
        <input asp-for="Date" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="SubeId" class="control-label"></label>
        <select asp-for="SubeId" asp-items="@(new SelectList(Model.SubeList, "SubeId", "SubeName"))" class="form-control">
            <option value="">Select a Sube</option>
        </select>
        <span asp-validation-for="SubeId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="exampleFormControlTextarea1">Kişi Sayisi</label>
        <input class="form-control" type="text" placeholder="@Model.KisiSayisi" readonly>
    </div>

    <div class="form-group">
        <input type="submit" value="Gönder" class="btn btn-primary" />
    </div>
</form>

