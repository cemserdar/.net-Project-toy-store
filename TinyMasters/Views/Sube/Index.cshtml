@model List<TinyMasters.ViewModel.SubeViewModel>
@{
    ViewData["Title"] = "User";
}

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>SB Admin 2 - Dashboard</title>

    <!-- Custom fonts for this template-->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body id="page-top">

    <h3>Siparişler</h3>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Ürün Adı</th>
                <th scope="col">SubeAdı</th>
                <th scope="col">Statu</th>
                <th scope="col"></th>
                <th scope="col"></th>
            </tr>
        </thead>

        @for (int i = 0; i < Model.Count; i++)
        {
            <tbody>
                <tr>
                    <th scope="row"></th>
                    <td>@Model[i].Products.Select(x => x.Name).FirstOrDefault()</td>
                    <td>@Model[i].SubeName</td>
                    <td>@Model[i].statu</td>

                    @if (Model[i].statu == 1)
                    {
                        <td style="background-color:green">Onaylandı</td>
                    }@if (Model[i].statu == 2)
                    {
                        <td style="background-color:red">Reddedildi</td>
                    }
                    @if (Model[i].statu == 0)
                    {
                        <form asp-controller="Sube" asp-action="Index" method="post">
                            <input type="hidden" class="form-control" name="rezId" value="@Model[i].ReservedId" />
                            <input type="hidden" class="form-control" name="productId" value="@Model[i].Products.Select(x=>x.Id).FirstOrDefault()" />
                            <input type="hidden" name="statu" value="1" />
                        <td> <input type="submit" value="Onayla" class="btn btn-primary" /></td>
                        </form>

                        <form asp-controller="Sube" asp-action="Index" method="post">
                            <input type="hidden" class="form-control" name="rezId" value="@Model[i].ReservedId" />
                            <input type="hidden" class="form-control" name="productId" value="@Model[i].Products.Select(x=>x.Id).FirstOrDefault()" />
                            <input type="hidden" name="statu" value="2" />
                        <td>  <input type="submit" value="Reddet" class="btn btn-danger" /></td>
                        </form>

                    }
                </tr>

            </tbody>
        }

    </table>

</body>

</html>